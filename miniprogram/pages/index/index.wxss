/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.logContainer{
  width: 100%;
}
.userinfoBox{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  background: yellow;
  width: 100%;
  top: 30%;
  z-index: 2;
}
 .uploader {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.uploader {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}
.pic-box{
  width: 100%;
}
.uploader-text{
  width: 100%;
  /* line-height: 52px; */
  font-size: 34rpx;
  color: #459fd9;
  display: flex;
  flex-direction: column;
  padding: 20rpx 5rpx;
}
.uploader-text-date{
  color: #999;
  font-size: 28rpx;
}
.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
}
.uploader-container-min{
  width: 200rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.uploader-image {
  width: 100%;
  height: 360rpx;
}
.uploader-image-min{
  width: 200rpx;
  height: 200rpx;
}

.uploader-video{
  width: 100%;
  height: 100%;
}
.uploader-footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.comment-input{
  padding: 0rpx 20rpx;
  border-radius: 4rpx;
  background-color: #999;
  opacity: 0.5;
}
.comment-input:active{
  opacity: 0.3;
}
.commenting-box{
  display: flex;
  position: fixed;
  justify-content: center;
  align-items: center;
  bottom: 0;
  left: 0;
  width: 100%;
  padding:20rpx;
  box-sizing: border-box;
  background-color: #fcfcfc;
  z-index: 2;
}
.commenting-bg{
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 1;
}