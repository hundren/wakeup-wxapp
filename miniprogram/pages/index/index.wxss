/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.logContainer{
  width: 100%;
}
.userinfoBox{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  background: yellow;
  width: 100%;
  top: 30%;
}
 .uploader {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.uploader {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.uploader-text{
  width: 100%;
  /* line-height: 52px; */
  font-size: 34rpx;
  color: #007aff;
  display: flex;
  flex-direction: column;
  padding: 20rpx 5rpx;
}
.uploader-text-date{
  color: #999;
  font-size: 28rpx;
}
.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

.uploader-video{
  width: 100%;
  height: 100%;
}