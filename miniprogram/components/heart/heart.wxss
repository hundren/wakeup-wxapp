.heart-box{
    width: 130rpx;
    height: 130rpx;
    overflow: hidden;
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    bottom: 100rpx;
    right: 10rpx;
    }
  
  .heart-content{
    width: 50rpx;
    height: 75rpx;
    /* float:left; */
    border-radius: 50% 50% 0 0;
    border: 1px solid #000;
    border-right: 0;
    border-left: 0;
    overflow: hidden;
    position: relative;
}
