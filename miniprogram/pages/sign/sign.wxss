page{
    background: #f7f7f7;
}
.text-container{
    width: 100%;
    padding:20rpx;
    box-sizing: border-box;
}
.container{
    margin-bottom: 300rpx
}
textarea{
    width: 100%;
    min-height: 200rpx;
}
picker{
    width: 100%;
    background: #fff;
}
.picker-date{
    padding:20rpx;
}
.save-btn{
    width: 100%;
    position: fixed;
    bottom: 0;
}
.log-box{
    position: fixed;
    bottom: 200rpx;
    right:-30rpx;
    background: red;
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    text-align: center;
    font-size: 28rpx;
    border-top-left-radius: 60rpx;
    border-bottom-left-radius: 60rpx;
}
.log-box:hover{
    right: 0;
}
.add-pic-button{
  font-size: 60rpx;
  border: 1px dashed #999;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  color: #999;
}