    }
    .right-heart{
    
    transform-origin: left bottom;
    
    transform: rotate(-46deg);
    
    animation: 2s move1 linear infinite;
    
    }
    
    @keyframes move{
    
    0%{transform:rotate(46deg) scale(1);}
    
    50%{transform:rotate(46deg) scale(1.2);}
    
    }
    
    @keyframes move1{
    
    0%{transform:rotate(-46deg) scale(1);}
    
    50%{transform:rotate(-46deg) scale(1.2);}
    
    }


    /* 漂浮运动爱心 */
    .bubble{
        position: absolute;
        opacity: 0;
        color: rgb(233, 60, 60);
        font-size: 42rpx;
    }
    @keyframes bubble_y_1 {
        0% {
            top: 0;
            opacity: 0;
        }
        50%{
            opacity: 0.8;
        }
        100% {
            top: -400rpx;
            opacity: 0;
        }
    }
    @keyframes bubble_y_2 {
