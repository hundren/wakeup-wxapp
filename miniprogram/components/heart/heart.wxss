    }
    .right-heart-in{
        /* position: absolute; */
        /* top: 40rpx;
        right:40rpx */
    }
   .right-heart{
    
    transform-origin: left bottom;
    
    transform: rotate(-46deg);
    
    animation: 2s move1 linear infinite;
    
    }
    
    @keyframes move{
    
    0%{transform:rotate(46deg) scale(1);}
    
    50%{transform:rotate(46deg) scale(1.2);}
    
    }
    
    @keyframes move1{
    
    0%{transform:rotate(-46deg) scale(1);}
    
    50%{transform:rotate(-46deg) scale(1.2);}
    
    }